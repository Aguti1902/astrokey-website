{
  "version": 2,
  "public": true,
  "buildCommand": "echo 'Static site ready'",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin/index.html"
    },
    {
      "source": "/intro",
      "destination": "/intro.html"
    },
    {
      "source": "/payment", 
      "destination": "/payment.html"
    },
    {
      "source": "/dashboard",
      "destination": "/dashboard.html"  
    },
    {
      "source": "/results",
      "destination": "/results.html"
    },
    {
      "source": "/test",
      "destination": "/test.html"
    },
    {
      "source": "/email-request",
      "destination": "/email-request.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "trailingSlash": false
}
